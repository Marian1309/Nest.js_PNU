{
  "extends": ["@commitlint/config-conventional"],
  "formatter": "@commitlint/format",
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "update",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ],
    "scope-enum": [0, "always", []]
  }
}
